<h1>Listing competitions</h1>

<table>
  <thead>
    <tr>
      <th>Comp name</th>
      <th>Points flag</th>
      <th>Sets flag</th>
      <th>Mvp flag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition.comp_name %></td>
        <td><%= competition.points_flag %></td>
        <td><%= competition.sets_flag %></td>
        <td><%= competition.mvp_flag %></td>
        <td><%= link_to 'Show', competition %></td>
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

